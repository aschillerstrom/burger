<h1>Eat-da-Burger</h1>
<!-- toptwo columns-->
<main>
  <div class = "container">
    <div class = "row">
      <div class = "col s6">
        {{#each burgers}}
          {{#unless this.devoured}}
          <div>
            <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                <div class = "row">
                  <div class = "col s6">
                    <p>{{this.burgerName}}</p>
                  </div>
                  <div class = "col s6"> 
                    <button type="submit" class='burgerNotDevoured'>Devour Me!</button>
                  </div>
                </div>
            </form>
          </div>
          {{/unless}}
        {{/each}}
      </div>

      <div class = "col s6">
        {{#each burgers}}
          {{#if this.devoured}}
          <div class = "burgerDevoured">
            <div>
              {{this.burgerName}}
            </div>
          </div>
          {{/if}}
        {{/each}}
      </div>

    </div>
  </div>
</main>

